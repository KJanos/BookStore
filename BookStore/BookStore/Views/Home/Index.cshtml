@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BookStore</title>
</head>
<body>
    <div>
        <h2>Books</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th></th>
            </tr>

            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p><a href="/Home/Delete/@b.BookId">Delete</a></p></td>
                </tr>
            }
        </table>
        <p><a href="/Home/Create/">Add</a></p>

    </div>
</body>
</html>